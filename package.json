{
  "name": "ajv-cli",
  "version": "5.0.0",
  "description": "Command line interface for Ajv JSON schema validator",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build",
    "eslint": "eslint \"src/**/*.*s\" \"test/**/*.js\"",
    "prettier:write": "prettier --write \"./**/*.{json,yaml,js,ts}\"",
    "prettier:check": "prettier --list-different \"./**/*.{json,yaml,js,ts}\"",
    "test-spec": "TS_NODE_PROJECT=test/tsconfig.json mocha -r ts-node/register \"test/**/*.spec.{ts,js}\" -R spec",
    "test-cov": "nyc npm run test-spec",
    "test": "npm run build && npm run eslint && npm run test-cov"
  },
  "nyc": {
    "exclude": [
      "test",
      "node_modules"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  },
  "bin": {
    "ajv": "dist/index.js"
  },
  "preferGlobal": true,
  "author": {
    "name": "Jakub Jirutka",
    "email": "jakub@jirutka.cz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jirutka/ajv-cli"
  },
  "dependencies": {
    "ajv": "^8.0.0",
    "fast-json-patch": "^3.1.0",
    "glob": "^10.4.0",
    "js-yaml": "^4.1.0",
    "json-schema-migrate": "^2.0.0",
    "json5": "^2.1.3",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/json5": "^2.2.0",
    "@types/minimist": "^1.2.1",
    "@types/mocha": "^10.0.0",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "ajv-keywords": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.2",
    "mocha": "^10.4.0",
    "nyc": "^15.0.1",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "ts-node": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yaml,js,ts}": "prettier --write"
  }
}
