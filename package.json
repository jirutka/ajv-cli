{
  "name": "ajv-cli",
  "version": "5.0.0",
  "description": "Command line interface for Ajv JSON schema validator",
  "author": {
    "name": "Jakub Jirutka",
    "email": "jakub@jirutka.cz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jirutka/ajv-cli"
  },
  "type": "module",
  "bin": {
    "ajv": "dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build",
    "eslint": "eslint \"src/**/*.*s\" \"test/**/*.js\"",
    "prettier:write": "prettier --write \"./**/*.{json,yaml,js,ts}\"",
    "prettier:check": "prettier --list-different \"./**/*.{json,yaml,js,ts}\"",
    "test-spec": "TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test-cov": "c8 npm run test-spec",
    "test": "npm run build && npm run eslint && npm run test-cov"
  },
  "dependencies": {
    "ajv": "^8.0.0",
    "clone": "^2.1.2",
    "damerau-levenshtein": "^1.0.8",
    "fast-json-patch": "^3.1.0",
    "json5": "^2.1.3",
    "minimist": "^1.2.0",
    "picomatch": "^4.0.2",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/clone": "^2.1.4",
    "@types/damerau-levenshtein": "^1.0.2",
    "@types/json-schema": "^7.0.15",
    "@types/json5": "^2.2.0",
    "@types/minimist": "^1.2.1",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.14.0",
    "@types/picomatch": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "ajv-keywords": "^5.0.0",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.4.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.5"
  },
  "nyc": {
    "exclude": [
      "test",
      "node_modules"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
  }
}
